@model ASPCoreGroupB.Models.Mahasiswa

@{
    Layout = "_Layout";
}

<h2>Detail Mahasiswa</h2>
<div class="row">
@if(ViewData["pesan"]!=null){
    //@ViewData["Pesan"];
    @Html.Raw(ViewData["pesan"]);  
}

<a asp-action="Index" class="btn btn-success btn-xs">Lihat Data</a> <br>

<div class="coll-md-6">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="form-group">
            <label asp-for="Nim" >NIM</label>
            <input asp-for="Nim" type="text" readonly="readonly" class="form-control"/>
            
        </div>
        
        <div class="form-group">
            <label asp-for="Nama" >Nama</label>
            <input asp-for="Nama" type="text" class="form-control"/>
            <span asp-validation-for="Nama" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Email" >Email</label>
            <input asp-for="Email" type="text" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Telp" >Telp</label>
            <input asp-for="Telp" type="text"  class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary">
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}